{
  "name": "log-tool",
  "version": "2.0.0",
  "description": "A tool to watch log files changes, and transport, transform, store, monitor, search logs.",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc -p src",
    "build-static": "tsc -p static && npm run minifier-template && webpack --display-modules && npm run bundle-vendor-css && npm run bundle-css && npm run clean && rev-static",
    "lint": "tslint \"src/*.ts\" \"static/*.ts\"",
    "minifier-template": "html-minifier --collapse-whitespace --case-sensitive static/app.template.html -o static/app.html",
    "clean": "rm -f static/vendor.bundle-*.js static/index.bundle-*.js static/vendor.bundle-*.css static/index.bundle-*.css",
    "bundle-vendor-css": "cleancss ./node_modules/bootstrap/dist/css/bootstrap.min.css ./node_modules/github-fork-ribbon-css/gh-fork-ribbon.css -o ./static/vendor.bundle.css",
    "bundle-css": "cleancss ./static/index.css -o ./static/index.bundle.css",
    "doc": "dot -Tpng architecture.dot > architecture.png"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plantain-00/log-tool.git"
  },
  "author": "York Yao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plantain-00/log-tool/issues"
  },
  "homepage": "https://github.com/plantain-00/log-tool#readme",
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chart.js": "0.0.12",
    "@types/express": "4.0.34",
    "@types/node": "7.0.0",
    "@types/node-fetch": "1.6.7",
    "@types/sqlite3": "2.2.31",
    "@types/uws": "0.0.0",
    "@types/ws": "0.0.37",
    "ajv": "4.11.2",
    "bootstrap": "3.3.7",
    "chart.js": "2.4.0",
    "clean-css": "3.4.23",
    "github-fork-ribbon-css": "0.2.1",
    "html-minifier": "3.2.3",
    "raw-loader": "0.5.1",
    "rev-static": "1.3.1",
    "rpc-on-ws": "3.0.2",
    "tslint": "4.3.1",
    "typescript": "2.1.4",
    "vue": "2.1.8",
    "vue-class-component": "4.4.0",
    "webpack": "1.14.0"
  },
  "dependencies": {
    "body-parser": "1.16.0",
    "express": "4.14.0",
    "moment": "2.17.1",
    "node-fetch": "1.6.3",
    "protobufjs": "6.4.6",
    "reconnection": "1.0.0",
    "rxjs": "5.0.3",
    "sqlite3": "3.1.8",
    "tslib": "1.5.0",
    "uws": "0.12.0",
    "ws": "1.1.1"
  }
}
